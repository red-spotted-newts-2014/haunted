<input type="hidden" id="room-session" value="<%= @room_session %>">

<div id="chat-widget">
  <h2><a href="http://haunted-game.herokuapp.com/">Haunted</a></h2>
  <div id="panel">
    <button id="instructions-button">Instructions</button>
    <button id="aboutus-button">About Us</button>
  </div>

  <div id="chat">
  <h3>Chat</h3>
  <div id="msg-output"></div>
    <form id="chat-form">
      <input type="text" id="user-name"></input><br>
      <input type="text" id="msg-input" placeholder="Message"></input>
      <input type="submit" id="send" value="send"></input>
    </form>
  </div>
</div>

<% if @sandbox %>
  <%= javascript_include_tag "sandbox.js" %>
<% else %>
  <%= javascript_include_tag "main.js" %>
<% end %>
